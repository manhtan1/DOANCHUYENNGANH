@model IEnumerable<phim2101.Models.NhanVien>

@{
    ViewBag.Title = "Quản lý Nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>Thông tin Nhân viên</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Họ tên 
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Ngày sinh
        </th>
        <th>
            Phái
        </th>
        <th>
            Chức vụ
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HoTenNV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChiNV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgaySinh)
        </td>
        <td>
            @if (item.Phai == true)
            {
                <span>Nam</span>
            }
            else
            {
                <span>Nữ</span>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChucVu)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.MaNV }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaNV }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaNV })
        </td>
    </tr>
}

</table>
