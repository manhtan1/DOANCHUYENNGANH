        item.addEventListener("click", function () {
            location.href = '@Url.Action("Themgiohang", "Datve")?MaPhim=' + Idfilm.dataset.film + '&idphong=' + IdPhong.dataset.phong + '&ghe=' + item.dataset.place + '&strURL=' + x;
