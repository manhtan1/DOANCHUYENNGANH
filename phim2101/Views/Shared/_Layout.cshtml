                                <li class="menu__nav-item"><a href="column.html">Rạp sắp mở</a></li>

                            </ul>
                        </li>
                        <li>
                            <span class="sub-nav-toggle plus"></span>
                            <a href="page-elements.html">Thành viên</a>
                            <ul>
                                <li class="menu__nav-item"><a href="book1.html">Tài khoản</a></li>
                                <li class="menu__nav-item"><a href="book2.html">Quyền lợi</a></li>

                            </ul>
                        </li>
                        <li>
                            <span class="sub-nav-toggle plus"></span>
                            <a href="gallery-four.html">Dịch vụ</a>
                            <ul>
                                <li class="menu__nav-item"><a href="gallery-four.html">Quầy vé Online</a></li>
                                <li class="menu__nav-item"><a href="gallery-three.html">Đặt vé nhóm và Thuê rạp</a></li>
                                <li class="menu__nav-item"><a href="gallery-two.html">Thẻ quà tặng</a></li>
                            </ul>
                        </li>
                        <li>
                            <span class="sub-nav-toggle plus"></span>
                            <a href="news-left.html">Thông tin</a>
                            <ul>
                                <li class="menu__nav-item"><a href="news-left.html">Tuyển dụng</a></li>
                                <li class="menu__nav-item"><a href="news-right.html">Giới thiệu</a></li>
                                <li class="menu__nav-item"><a href="news-right.html">Ưu đãi</a></li>


                            </ul>
                        </li>

                    </ul>
                </nav>

                <div class="control-panel">
                    <div class="auth auth--home">

                        @{
                            var session = (phim2101.Models.KhachHang)Session["TaiKhoan"];
                        }

                        @if (session == null)
                        {
                            <a href="/Home/DangKy" class="btn btn--sign btn--singin">
                                Đăng nhập
                            </a>
                        }
                        else
                        {
                            @*<div class="auth__show">
                                <span class="auth__image">
                                    <img src="~/Images/logohutech.png" alt="logo" />
                                </span>
                            </div>*@
                            <a href="/Home/DangKy" class="btn btn--sign btn--singin">
                                @session.TenKH
                            </a>
                        }

                        <ul class="auth__function">
                            <li><a href="#" class="auth__function-item">Watchlist</a></li>
                            <li><a href="#" class="auth__function-item">Booked tickets</a></li>
                            <li><a href="#" class="auth__function-item">Discussion</a></li>
                            <li><a href="#" class="auth__function-item">Settings</a></li>
                        </ul>

                    </div>
                    @*<a href="#" class="btn btn-md btn--warning btn--book btn-control--home login-window">Book a ticket</a>*@
                </div>

            </div>
